template(name='navbar')
    header
        h1 {{title}}
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse'
              , data-target='#navbar'
              , aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            // each loop requires js helper, value gets assigned to unknown text
            each arr3
              span.icon-bar
          a.navbar-brand(href='/') Product Info
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href='/') Home
            li: a(href='vid') Market
            li: a(href='git') Github

template(name='tweets')
  h3 Identify Product
  .input-group
    span.input-group-btn
      button.btn.btn-default#bt_amzn(type='button')  Amazon URL
    input.form-control#tb_amzn(type='text', aria-describedby='basic-addon2'
      , value='#{amznUrl}')
  .input-group
    span.input-group-addon root
    input.form-control#tb_amzn_root(type='text', aria-describedby='basic-addon1'
      , value='#{amznRoot}')
  .input-group
    span.input-group-addon title
    input.form-control#tb_amzn_title(type='text', aria-describedby='basic-addon1'
      , value='#{amznTitle}')
    span.input-group-addon img
    input.form-control#tb_amzn_img(type='text', aria-describedby='basic-addon1'
      , value='#{amznImg}')
  .input-group
    span.input-group-addon dataroot
    input.form-control#tb_amzn_dataroot(type='text', aria-describedby='basic-addon1'
    , value='#{amznDataroot}')
  .input-group
    span.input-group-addon header
    input.form-control#tb_amzn_header(type='text', aria-describedby='basic-addon1'
    , value='#{amznHeader}')
    span.input-group-addon data
    input.form-control#tb_amzn_data(type='text', aria-describedby='basic-addon1'
    , value='#{amznData}')


  p.lead
    ul.list-group
      li.list-group-item
        button.btn.btn-primary(type='button') Header 
          span.badge #{scrapedHeaderCount}
        | #{scrapedHeader}

      li.list-group-item
        button.btn.btn-primary(type='button') Data: 
          span.badge #{scrapedDataCount}
        | #{scrapedData}

  .input-group
    span.input-group-addon url
    input.form-control#tb_url(type='text', aria-describedby='basic-addon2'
      , value='#{amznUrl}')
      
  .input-group
    span.input-group-addon selector
    input.form-control#tb_header(type='text', aria-describedby='basic-addon1'
      , value='#{amznRoot} #{amznHeader}')

  input#bt_header(type='submit', value='Get Header using cheerio.js')
  br
  br

  .input-group
    span.input-group-addon selector
    input.form-control#tb_data(type='text', aria-describedby='basic-addon1'
      , value='#{amznRoot} #{amznData}')

  input#bt_data(type='submit', value='Get Data using jquery/jsdom')
  br
  br

  .input-group
    span.input-group-addon root
    input.form-control#tb_table_root(type='text', aria-describedby='basic-addon1'
      , value='#{amznRoot}')
  .input-group
    span.input-group-addon header
    input.form-control#tb_table_header(type='text', aria-describedby='basic-addon1'
    , value='#{amznHeader}')
    span.input-group-addon data
    input.form-control#tb_table_data(type='text', aria-describedby='basic-addon1'
    , value='#{amznData}')
    

  input#bt_table(type='submit', value='Get Table using labwingslab/x-ray')

  ul.list-group
    li.list-group-item
      button.btn.btn-primary(type='button') Table: 
        span.badge #{scrapedTableCount}
      | #{scrapedTable}
        
